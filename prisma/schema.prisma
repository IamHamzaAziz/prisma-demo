generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int @id @default(autoincrement())
  name    String
  email   String @unique
  age     Int?  // ? means it is nullable
  createdAt DateTime @default(now())
  
  posts     Post[]  // optional; allows fetching a user's posts when fetching the user
}

model Post {
  id      String @id @default(uuid())
  title   String
  content String?
  userId  Int   // FK column storing User id
  user    User  @relation(fields: [userId], references: [id])   // relation to fetch User details; optional in queries; FK works without it
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("blog_posts")   // table name in db; we will be using primsa.post (which follows prisma.<modelname lowercased>) in code 
}

